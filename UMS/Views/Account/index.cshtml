@model UserToReturn
@{ 
    ViewBag.Title = "Upload Photo";
    
} 

<div class="container">
    <div class="d-flex justify-content-center align-items-center mt-4" style="min-height:200px;">
        <div class="col-4 rounded p-4" style=" box-shadow: 0px 0px 4px 4px grey;">
            <form method="post" asp-action="Upload" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="">
                        <input asp-for="Photo" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="Username" placeholder="Username" />
                </div>
                <div class="form-group">
                    <input asp-for="Email" placeholder="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Upload" />
                </div>
            </form>
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div>@ViewBag.Message</div>
                }

                @if (ViewBag.UserPhoto != null)
                {
                    <div>@ViewBag.UserPhoto</div>
                    <div class="m-auto col-3 border">
                        <img src="~/images/@ViewBag.UserPhoto" asp-append-version="true" style="width:100%"/>
                    </div>
                }

                @if (ViewBag.Username != null)
                {
                    <div>@ViewBag.Username</div>
                }
            </div>
        </div>
    </div>
</div>

